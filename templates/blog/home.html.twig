{% extends 'blog/index.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
{% for item in posts %}
<article class="masonry__brick entry format-standard">
                        <div class="entry__thumb">
                            <a href="{{path('details_blog',{'id':item.id})}}" class="entry__thumb-link">
                                <img src="{{item.image}}" 
                                         alt="">
                            </a>
                        </div>
        
                        <div class="entry__text">
                            <div class="entry__header">
    
                                <h2 class="entry__title"><a href="{{path('details_blog',{'id':item.id})}}">{{item.title}}</a></h2>
                                <div class="entry__meta">
                                    <span class="entry__meta-cat">
                                        <a href="#">Author:</a> 
                                        <a href="#">Conan Đặng Handsome | Cassano Đẹp Trai</a>
                                    </span>
                                    <span class="entry__meta-date">
                                        <a href="{{path('details_blog',{'id':item.id})}}">{{"now"|date("m/d/Y")}}</a>
                                    </span>
                                </div>
                                
                            </div>
                            <div class="entry__excerpt">
                                <p>
                                    {{item.content}}
                                </p>
                            </div>
                        </div>
        
                    </article>
	
{% endfor %}
				    <!-- end article -->
    
                  
    
                </div> <!-- end masonry -->

            </div> <!-- end masonry-wrap -->

            <div class="row">
                <div class="column large-full">
                    <nav class="pgn">
                        <ul>
                            <li><a class="pgn__prev" href="#0">Prev</a></li>
                            <li><a class="pgn__num" href="#0">1</a></li>
                            <li><span class="pgn__num current">2</span></li>
                            <li><a class="pgn__num" href="#0">3</a></li>
                            <li><a class="pgn__num" href="#0">4</a></li>
                            <li><a class="pgn__num" href="#0">5</a></li>
                            <li><span class="pgn__num dots">…</span></li>
                            <li><a class="pgn__num" href="#0">8</a></li>
                            <li><a class="pgn__next" href="#0">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

        </div>






{% endblock %}